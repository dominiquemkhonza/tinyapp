<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create Your New URL</a>
      </div>
    </div>

    <!-- text input for username, submit button -->

    <% if(username){ %>
      <p> Hello, <%= username %>!</p>
      <form action="/logout"   method="POST" >
       <button  type="submit" class="btn btn-primary"> Logout </button> 
     </form>
        <% } else{ %>
          <div class="navbar-nav"></div>
          <a class="nav-item nav-link" href="/login">  Login  </a>
        </div>
        <% } %>

 <form>
      <img style="float:left" src="https://static.thenounproject.com/png/2758642-200.png" height="32" alt="Login Image">
     
      <label class="sr-only">Username</label>
      <input type="text" name = "username" id="username" placeholder ="username" required> </input>
      <button type="submit" class="btn btn-light">Sign In</button>
    </form> 


  </nav>
